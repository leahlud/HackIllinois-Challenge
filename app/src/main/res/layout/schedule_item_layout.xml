<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#F9F6FF"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="6:00 PM" />

    <TextView
        android:id="@+id/eventBackground_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/event_item_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_textView" />

    <TextView
        android:id="@+id/eventTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="13dp"
        android:textSize="22sp"
        android:textColor="#E1625685"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/eventBackground_textView"
        app:layout_constraintTop_toBottomOf="@+id/time_textView"
        tools:text="John Deere" />

    <TextView
        android:id="@+id/eventType_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#E1625685"
        app:layout_constraintLeft_toLeftOf="@id/eventTitle_textView"
        app:layout_constraintTop_toBottomOf="@id/eventTitle_textView"
        tools:text="QNA" />

    <TextView
        android:id="@+id/eventTime_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#E1625685"
        app:layout_constraintLeft_toLeftOf="@id/eventTitle_textView"
        app:layout_constraintTop_toBottomOf="@id/eventType_textView"
        tools:text="6:00 - 7:00 PM" />

    <TextView
        android:id="@+id/eventPoints_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/points_corners"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:paddingHorizontal="7dp"
        android:paddingVertical="3dp"
        android:gravity="center"
        android:textColor="#E1625685"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/eventTime_textView"
        app:layout_constraintLeft_toRightOf="@id/eventTime_textView"
        tools:text="+100 pts" />

    <TextView
        android:id="@+id/eventDescription_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:textColor="#E16E648C"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/eventTitle_textView"
        app:layout_constraintRight_toRightOf="@id/eventBackground_textView"
        app:layout_constraintTop_toBottomOf="@id/eventTime_textView"
        tools:text="Come and find out more about what our Title Sponsor John Deere does! Come and learn about one of the biggest manufacturers of agricultural machinery as well as the various recruitment opportunities at John Deere during this meeting." />

</androidx.constraintlayout.widget.ConstraintLayout>